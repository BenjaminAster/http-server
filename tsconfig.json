{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"allowJs": true,
		"checkJs": true,
		// "noEmit": true,
		"rootDir": "./src/",
		"outDir": "./dist/",
		// "declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"strict": false,
		"isolatedModules": true,
		"allowArbitraryExtensions": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": false,
		"esModuleInterop": false,
		"verbatimModuleSyntax": true,
		"lib": ["ESNext"],
		"types": ["better-typescript", "@types/node"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"noEmitOnError": true,
	},
}